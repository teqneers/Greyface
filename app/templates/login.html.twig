{% extends 'page.html.twig' %}

{% block subtitle %}Anmelden{% endblock %}

{% block content %}

    <h3>Welcome to Greyface</h3>
    {% if error %}
        <div class="alert alert-danger">
                {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
    {% endif %}

    <form name="login" method="post" action="{{ path('login') }}">
        <div class="form-group">
            <label for="username">E-Mail-Adresse</label>
            <input class="form-control" type="text" aria-label="Login" id="username" name="username"
                   value="{{ last_username }}"
                   required autocomplete="username" {% if not last_username %}autofocus{% endif %}/>
        </div>

        <div class="form-group">
            <label for="password">Passwort</label>
            <input class="form-control" type="password" aria-label="Password" id="password" name="password"
                   required autocomplete="current-password" {% if last_username %}autofocus{% endif %}/>
        </div>

        <div class="form-group mb-3">
            <div class="form-check">
                <input type="checkbox" class="form-check-input" id="remember_me" name="remember_me"/>
                <label class="form-check-label" for="remember_me">angemeldet bleiben</label>
            </div>
        </div>

        <input type="hidden" name="csrf_token" value="{{ csrf_token('login') }}"/>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">
                <i class="tq-glyph-enter-right"></i>
                <span>Anmelden</span>
            </button>
        </div>
    </form>
{% endblock %}
